# Seguridad y configuración de la app
# (No expongas credenciales en el repositorio)

# Evitar listado de directorios
Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Bloquear acceso a archivos/paths que comienzan con punto (.git, .env, etc.)
  RewriteRule "(^|/)\." - [F]

  # Bloquear acceso directo a la carpeta sql/
  RewriteRule ^sql/ - [F,L]

  # Forzar HTTPS (si hay SSL activo en el hosting)
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# MIME para Web App Manifest
AddType application/manifest+json .webmanifest

